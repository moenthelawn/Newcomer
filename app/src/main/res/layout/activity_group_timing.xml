<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".GroupTiming" android:id="@+id/constraintLayout">

    <TextView
            android:text="Select the event timing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView15"
            android:fontFamily="sans-serif"
            android:textSize="30sp" android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/calendarView" android:layout_marginTop="8dp"
            app:layout_constraintHorizontal_bias="0.49"/>
    <TextView
            android:text="Prev"
            android:layout_width="wrap_content"
            android:background="@color/white"
            android:textColor="@color/LightGrey"
            android:elevation="3dp"
            android:paddingLeft="2dp"
            android:padding="2dp"
            android:layout_height="wrap_content"
            android:id="@+id/prev2"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/your_state_progress_bar_id2"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="1.0"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginStart="1dp"
            android:layout_marginBottom="1dp"/>
    <com.kofigyan.stateprogressbar.StateProgressBar
            android:id="@+id/your_state_progress_bar_id2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:elevation="3dp"
            app:spb_currentStateNumber="two"
            app:spb_maxStateNumber="four"
            app:spb_stateBackgroundColor="#BDBDBD"
            app:spb_stateForegroundColor="@color/DarkCyan"
            app:spb_stateNumberBackgroundColor="#808080"
            app:spb_stateNumberForegroundColor="#eeeeee"
            app:spb_currentStateDescriptionColor="@color/DarkCyan"
            app:spb_stateDescriptionColor="#808080"
            app:spb_animateToCurrentProgressState="true"
            app:spb_checkStateCompleted="true"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="Next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/LightGrey"
            android:background="@color/white"
            android:textStyle="bold"
            android:paddingLeft="4dp"
            android:padding="4dp"
            android:id="@+id/next2"
            android:elevation="3dp"
            android:textSize="20sp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/your_state_progress_bar_id2"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginEnd="1dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" android:layout_marginBottom="1dp"/>
    <CalendarView
            android:layout_width="406dp"
            android:layout_height="336dp"
            android:elevation="3dp"
            android:background="@color/white"
            android:focusedMonthDateColor="@color/DarkCyan"
            android:id="@+id/calendarView" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="1dp" android:layout_marginEnd="1dp"/>
    <Button
            android:text="Set Time"
            android:elevation="2dp"
            android:drawableLeft="@drawable/clock"
            android:background="@drawable/rounded_button"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/your_state_progress_bar_id2"
            app:layout_constraintTop_toBottomOf="@+id/calendarView" app:layout_constraintVertical_bias="0.0"
            android:layout_marginTop="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>