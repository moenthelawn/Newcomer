<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".signup">

    <EditText
            android:layout_width="251dp"
            android:layout_height="60dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/email"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.6" app:layout_constraintHorizontal_bias="1.0"/>
    <EditText
            android:layout_width="253dp"
            android:layout_height="56dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/password"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="1.0"/>
    <TextView
            android:text="Password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" android:textSize="24sp"
            app:layout_constraintEnd_toStartOf="@+id/email" app:layout_constraintBottom_toBottomOf="@+id/email"
            app:layout_constraintTop_toTopOf="@+id/email" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="35dp" android:layout_marginStart="35dp" android:layout_marginEnd="35dp"
            android:layout_marginRight="35dp" app:layout_constraintVertical_bias="0.79"/>
    <TextView
            android:text="Email "
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:id="@+id/textView5" android:textSize="24sp"
            app:layout_constraintTop_toTopOf="@+id/password"
            app:layout_constraintBottom_toBottomOf="@+id/password" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/password" app:layout_constraintVertical_bias="1.0"/>
    <Button
            android:text="Sign Up"
            android:layout_width="214dp"
            android:layout_height="49dp"
            android:id="@+id/button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/email" app:layout_constraintVertical_bias="0.36"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>