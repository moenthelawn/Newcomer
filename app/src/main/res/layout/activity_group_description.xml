<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".GroupDescription">

    <TextView
            android:text="Next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/LightGrey"
            android:background="@color/white"
            android:textStyle="bold"
            android:paddingLeft="4dp"
            android:padding="4dp"
            android:id="@+id/next3"
            android:elevation="3dp"
            android:textSize="20sp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/your_state_progress_bar_id3"
            app:layout_constraintVertical_bias="1.0" app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginEnd="1dp"/>
    <TextView
            android:text="Prev"
            android:layout_width="wrap_content"
            android:background="@color/white"
            android:textColor="@color/LightGrey"
            android:elevation="3dp"
            android:paddingLeft="2dp"
            android:padding="2dp"
            android:layout_height="wrap_content"
            android:id="@+id/prev4" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/your_state_progress_bar_id3"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="1.0"
            app:layout_constraintHorizontal_bias="0.0" android:textSize="20sp" android:layout_marginStart="1dp"
    />
    <com.kofigyan.stateprogressbar.StateProgressBar
            android:id="@+id/your_state_progress_bar_id3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:elevation="3dp"
            app:spb_currentStateNumber="three"
            app:spb_maxStateNumber="four"
            app:spb_stateBackgroundColor="#BDBDBD"
            app:spb_stateForegroundColor="@color/DarkCyan"
            app:spb_stateNumberBackgroundColor="#808080"
            app:spb_stateNumberForegroundColor="#eeeeee"
            app:spb_currentStateDescriptionColor="@color/DarkCyan"
            app:spb_stateDescriptionColor="#808080"
            app:spb_animateToCurrentProgressState="true"
            app:spb_checkStateCompleted="true"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"/>
    <LinearLayout
            android:orientation="horizontal"
            android:background="@color/LightGrey"
            android:divider="@drawable/horizontal_divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.26999998" android:id="@+id/linearLayout5"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout4" app:layout_constraintHorizontal_bias="0.0">
    </LinearLayout>
    <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner3"
            android:text="NEW PREVIEW TEXT"
            android:textSize="20sp"

            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout5"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="@+id/textView31"
            app:layout_constraintVertical_bias="0.65999997" app:layout_constraintHorizontal_bias="0.56"/>
    <TextView
            android:text="Name of the event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView17"
            android:textSize="22sp"
            app:layout_constraintStart_toStartOf="@+id/EventName"
            app:layout_constraintEnd_toEndOf="@+id/EventName" app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3" app:layout_constraintVertical_bias="0.0"
            android:layout_marginTop="8dp"/>
    <TextView
            android:text="Location of the event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView29"
            android:textSize="22sp"
            app:layout_constraintStart_toStartOf="@+id/eventLocation"
            app:layout_constraintEnd_toStartOf="@+id/floatingActionButton"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
            app:layout_constraintBottom_toTopOf="@+id/eventLocation" android:layout_marginTop="8dp"/>
    <TextView
            android:text="Group size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView31"
            android:textSize="22sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/linearLayout5"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout4" app:layout_constraintVertical_bias="0.0"/>
    <LinearLayout
            android:orientation="horizontal"
            android:background="@color/LightGrey"
            android:divider="@drawable/horizontal_divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:id="@+id/linearLayout3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.07999998">
    </LinearLayout>
    <TextView
            android:text="1"
            android:gravity="center"
            android:textSize="18sp"
            android:background="@drawable/number"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:id="@+id/textView28"

            app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
            app:layout_constraintEnd_toStartOf="@+id/EventName" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3"/>
    <TextView
            android:text="2"
            android:gravity="center"
            android:textSize="18sp"
            android:background="@drawable/number"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:id="@+id/textView30"

            app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
            app:layout_constraintEnd_toStartOf="@+id/eventLocation" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="3"
            android:gravity="center"
            android:textSize="18sp"
            android:background="@drawable/number"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:id="@+id/textView32"

            app:layout_constraintBottom_toTopOf="@+id/linearLayout5"
            app:layout_constraintTop_toTopOf="@+id/textView31" app:layout_constraintEnd_toStartOf="@+id/textView31"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintVertical_bias="0.0"
            app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/EventName" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout2" android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp" app:layout_constraintVertical_bias="0.53"
            android:layout_marginBottom="8dp" app:layout_constraintTop_toBottomOf="@+id/textView17"/>
    <EditText
            android:layout_width="161dp"
            android:layout_height="47dp"
            android:gravity="center"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/eventLocation"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout4" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintVertical_bias="0.68"/>
    <LinearLayout
            android:orientation="horizontal"
            android:background="@color/LightGrey"
            android:divider="@drawable/horizontal_divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.3" android:id="@+id/linearLayout4"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2">
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:background="@color/LightGrey"
            android:divider="@drawable/horizontal_divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/linearLayout2" app:layout_constraintVertical_bias="0.18"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3">
    </LinearLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@color/DefaultCyan"
            android:scaleType="centerCrop"
            android:clickable="true" app:srcCompat="@android:drawable/ic_menu_edit"
            android:id="@+id/floatingActionButton" app:rippleColor="@color/DefaultCyan"
            android:backgroundTint="@color/DefaultCyan"
            app:fabCustomSize="35dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:tint="#00494949" app:layout_constraintVertical_bias="0.54"
            app:layout_constraintStart_toEndOf="@+id/eventLocation"
            app:layout_constraintBottom_toBottomOf="@+id/eventLocation" app:layout_constraintTop_toTopOf="@+id/eventLocation"/>
    <ImageView
            android:layout_width="23dp"
            android:layout_height="30dp" app:srcCompat="@drawable/user"
            android:id="@+id/imageView5" app:layout_constraintEnd_toStartOf="@+id/spinner3"
            app:layout_constraintBottom_toBottomOf="@+id/spinner3" app:layout_constraintTop_toTopOf="@+id/spinner3"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="1.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>